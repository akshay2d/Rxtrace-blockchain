// -----------------------------------
// DATABASE CONNECTION
// -----------------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------------------------
// PRISMA CLIENT GENERATOR
// -----------------------------------
generator client {
  provider = "prisma-client-js"
}

// -----------------------------------
// COMPANIES (MASTER)
// -----------------------------------
model companies {
  id           String   @id @default(uuid())
  user_id      String
  company_name String
  created_at   DateTime @default(now())

  wallet         company_wallets?
  active_heads   company_active_heads?
  transactions   billing_transactions[]
  seats          seats[]
  handsets       handsets[]
  handset_tokens handset_tokens[]
  packing_rules  packing_rules[]
  pallets        pallets[]
  cartons        cartons[]
  skus           skus[]
}

// -----------------------------------
// COMPANY WALLET
// -----------------------------------
model company_wallets {
  company_id   String   @id
  balance      Float    @default(0)
  credit_limit Float    @default(10000)
  status       String   @default("ACTIVE")
  updated_at   DateTime @updatedAt

  company companies @relation(fields: [company_id], references: [id])
}

// -----------------------------------
// ACTIVE PAID MODULES
// -----------------------------------
model company_active_heads {
  company_id String   @id
  heads      Json     @default("{}")
  updated_at DateTime @updatedAt

  company companies @relation(fields: [company_id], references: [id])
}

// -----------------------------------
// BILLING TRANSACTIONS
// -----------------------------------
model billing_transactions {
  id            String   @id @default(uuid())
  company_id    String
  type          String
  subtype       String?
  count         Int      @default(1)
  amount        Float
  balance_after Float
  created_at    DateTime @default(now())

  company companies @relation(fields: [company_id], references: [id])

  @@index([company_id])
}

// -----------------------------------
// SEATS
// -----------------------------------
model seats {
  id           String    @id @default(uuid())
  company_id   String
  user_id      String?
  email        String?
  role         String?   @default("operator")
  active       Boolean   @default(false)
  status       String    @default("pending")
  invited_at   DateTime?
  activated_at DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @default(now()) @updatedAt

  company companies @relation(fields: [company_id], references: [id])

  @@index([company_id])
  @@index([user_id])
  @@index([email])
  @@index([status])
}

// -----------------------------------
// HANDSET TOKENS
// -----------------------------------
model handset_tokens {
  id         String   @id @default(uuid())
  company_id String
  token      String   @unique
  high_scan  Boolean  @default(false)
  used       Boolean  @default(false)
  created_at DateTime @default(now())

  company companies @relation(fields: [company_id], references: [id])

  @@index([company_id])
}

// -----------------------------------
// HANDSETS
// -----------------------------------
model handsets {
  id                 String   @id @default(uuid())
  company_id         String
  seat_id            String?  @default("")
  device_fingerprint String   @unique
  high_scan_enabled  Boolean  @default(false)
  status             String   @default("ACTIVE")
  activated_at       DateTime @default(now())

  company companies @relation(fields: [company_id], references: [id])

  @@index([company_id])
}

// -----------------------------------
// SKU MASTER
// -----------------------------------
model skus {
  id         String    @id @default(uuid())
  company_id String
  sku_code   String
  sku_name   String
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  company companies @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@unique([company_id, sku_code])
  @@index([company_id])
  @@index([company_id, deleted_at])
}

// -----------------------------------
// PACKING RULES
// -----------------------------------
model packing_rules {
  id                           String   @id @default(uuid())
  company_id                   String
  sku_id                       String
  version                      Int      @default(1)
  strips_per_box               Int
  boxes_per_carton             Int
  cartons_per_pallet           Int
  allow_partial_last_container Boolean  @default(true)
  sscc_company_prefix          String
  sscc_sequence_key            String
  meta                         Json     @default("{}")
  created_at                   DateTime @default(now())

  company companies @relation(fields: [company_id], references: [id])

  @@unique([sku_id, version])
}

// -----------------------------------
// SSCC COUNTERS
// -----------------------------------
model sscc_counters {
  sequence_key String   @id
  last_serial  BigInt   @default(0)
  updated_at   DateTime @default(now())
}

// -----------------------------------
// PALLETS
// -----------------------------------
model pallets {
  id         String   @id @default(uuid())
  company_id String
  sku_id     String?
  sscc       String   @unique @db.VarChar(18)
  meta       Json     @default("{}")
  created_at DateTime @default(now())

  company companies @relation(fields: [company_id], references: [id])
  cartons cartons[]
}

// -----------------------------------
// CARTONS
// -----------------------------------
model cartons {
  id         String   @id @default(uuid())
  company_id String
  pallet_id  String?
  code       String
  meta       Json     @default("{}")
  created_at DateTime @default(now())

  company companies @relation(fields: [company_id], references: [id])
  pallet  pallets?  @relation(fields: [pallet_id], references: [id])
}
